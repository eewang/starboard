<% if @group && current_user.giftable_star_bank %>
  <div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" 
          aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">You have <%= current_user.giftable_star_bank.size %>'s left to give</h3>
    </div>       
    <div class="modal-body">
        <%= form_for @achievement do |f| %>
          <div class="field">
            <label for="star-receiver" >Who would you like to starify?</label>
            <input type="text" id="star-receiver" class="span3" style="margin: 0 auto;" data-provide="typeahead" data-items="4" data-source="<%= @group.users.collect { |u| u.name } %>" name="user_name">
           </div>
          <div class="field">
            <%= f.label "Enter A Message!", :for => 'message' %>
            <%= f.text_field :message, :id => 'message' %>
          </div>
          <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <button class="btn btn-primary">Save changes</button>
            <%= submit_tag ('Submit')  %>
          </div>    
        <% end %>
    </div>  
  </div>       
<% end %>