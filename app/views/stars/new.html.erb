<!-- Modal -->
<div id="star-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="star-modalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="star-modalHeader">Modal header</h3>
  </div>
  <div class="modal-body">
    <%= form_for @star do |f| %>
      <div class="field">
        <%= f.label "Enter Star Name" %>
        <%= f.text_field :name, :id => 'message' %>
      </div>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary">Save changes</button>
    <% end %>
  </div>
</div>