<% if @group %>
  <div id="refillStarModal" class="modal hide fade" tabindex="-1" role="dialog" 
          aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Refill Star Bank!</h3>
    </div>       
    <div class="modal-body">
      <div class="field">
        <label for="star-receiver" >Whose Starbank Would You Like to Refill?</label>
            <input type="text" id="star-receiver" class="span3" style="margin: 0 auto;" data-provide="typeahead" data-items="4" data-source="<%= @group.users.collect { |u| u.name } %>" name="user_name">
        </div>
      <div class="field">
        <label for="number-stars"> How Many Stars Would You Like to Add to Their Star Bank? </label>
          <input type="number" id="number-stars" class="span3" tyle="margin: 0 auto;" data-provide="typeahead" data-items="4">
      </div>
      <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
        <button class="btn btn-primary">Save changes</button>
        <%= submit_tag ('Submit')  %>
      </div>  
    </div>
  </div>  
<% end %> 






