<div class="sidebar span4">
  <div class="profile-pic">
    <% if current_user %>
      <%= content_for?(:sidebar_profile_pic) ? yield(:sidebar_profile_pic) : (image_tag current_user.safe_profile_pic) %>
    </div>
    <ul class="navigation">
      <% if @group %>
        <li class="head hidden-phone"><%= @group.name %> <%= link_to 'See All', groups_path, :class => 'see-all' %></li>
          <ul class="hidden-phone">
            <a href="/groups/<%= @group.id %>/activity">
              <li class="view-nav <%= 'active' if @active_nav == 'activity' %> "><i class="icon-reorder"></i> Activity Feed</li>
            </a>
            <a href="/groups/<%= @group.id %>/leaderboard">
              <li class="view-nav <%= 'active' if @active_nav == 'leaderboard' %> "><i class="icon-th-large"></i> Leaderboard</li>
            </a>
            <a href="/groups/<%= @group.id %>/combined">
              <li class="view-nav <%= 'active' if @active_nav == 'combined' %> "><i class="icon-tasks"></i> Combined</li>
            </a>
          </ul>
      <% end %>
      <li class="head">Stars <%= link_to 'See All', user_path(current_user), :class => 'see-all' %></li>
      <ul>
        <li class="view-nav">
          <i class="icon-book"></i> Blog 
          <span class="count"><%= content_for?(:blog_count) ? yield(:blog_count) : current_user.blog_stars %></span>
        </li>
        <li class="view-nav">
          <i class="icon-reorder"></i> Codeschool 
          <span class="count"><%= content_for?(:codeschool_count) ? yield(:codeschool_count) : current_user.codeschool_stars %></span>
        </li>
        <li class="view-nav">
          <i class="icon-github"></i> Github 
          <span class="count"><%= content_for?(:github_count) ? yield(:github_count) : current_user.github_stars %></span>
        </li>
        <li class="view-nav">
          <i class="icon-github"></i> Handraise 
          <span class="count"><%= content_for?(:handraise_count) ? yield(:handraise_count) : current_user.github_stars %></span>
        </li>
        <li class="view-nav">
          <i class="icon-github"></i> Student 
          <span class="count"><%= content_for?(:student_count) ? yield(:student_count) : current_user.github_stars %></span>
        </li>
        <li class="view-nav">
          <i class="icon-github"></i> Teacher 
          <span class="count"><%= content_for?(:teacher_count) ? yield(:teacher_count) : current_user.github_stars %></span>
        </li>
        <li class="view-nav">
          <i class="icon-reorder"></i> Treehouse 
          <span class="count"><%= content_for?(:treehouse_count) ? yield(:treehouse_count) : current_user.treehouse_stars %></span>
        </li>
      </ul>
      <% if @users %>
        <li class="head classmates">Class</li>
        <ul>
          <% @users.each do |user| %>
            <li class="classmate"> <%= image_tag user.safe_profile_pic %> <%= link_to user.name, user_path(user) %> <span class="count"><%= user.achievements.count %></span></li>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  </ul>
</div>