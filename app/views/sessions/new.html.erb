<h1>Log In</h1>

<%= form_tag sessions_path do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= email_field_tag :email, params[:email] %>
  </div>

  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>

  <%= hidden_field_tag 'invitation_token', params[:invitation_token] %>

  <div class="actions">
    <%= submit_tag "Log In" %>
  </div>
<% end %>

<h2>Or check out some sample groups...</h2>

<% if @new_groups %>
  <% @new_groups.each do |group| %>
    <%= link_to group.name, groups_path + "/" + group.id.to_s %>
  <% end %>
<% end %>