<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span4">
    <p>
      <b>Name:</b>
      <%= @user.name %>
    </p>

    <div>
      <img src=<%= @user.safe_profile_pic %>>
    </div>

    <% if is_current_user_profile? %>
      <%= link_to 'Edit', edit_user_path(@user) %>
    <% end %>

    <% if !is_current_user_profile? || !current_user_is_teacher? %>

      <% if !is_current_user_profile? && !current_user_is_teacher? %>
        <%= form_tag(give_star_path(@user), :method => 'post') do %>
          Enter A Message to Give A Star!<%= text_field_tag(:message) %>
          <%= submit_tag ('Submit') %>
        <% end %>
      <% end %>

      <% if current_user_is_teacher? %>
        <%= form_tag(refill_star_bank_path(@user), :method => 'post') do %>
          <p>Add <%= number_field_tag 'star_bank', :min => 1 %> stars to <%= @user.name %>'s Star Bank!</p>

          <%= submit_tag ('Submit') %>
        <% end %>
      <% end %>


      <% if current_user_is_teacher? %>
        <%= form_tag(teacher_star_path(@user), :method => 'post') do %>
        <p>Give a Star! </p>
          <select name="post[name]">
            <% @teacher_stars.each do |star| %>
              <option value="<%= star.id %>"><%= star.name%></options>
            <% end %>
          <%= submit_tag ('Submit') %>
        <% end %>

        <%= form_tag(teacher_star_path(@user), :method => 'post') do %>
            <p> Or create a new star!</p>
            <p> <%= text_field_tag(:name) %>
            <%= submit_tag ('Submit') %>
        <% end %>
      <% end %>

      <b>Messages:</b>
      <ul> 
        <% if @messages %>
          <% @messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
      </ul>
        <% end %>

  </div>

      <% if current_user_is_teacher? && is_current_user_profile?  %>
        <div class="span8">

          <b>Groups:</b>
          <ul>
              <%= render :partial => "groups/groups" %>
          </ul>

        </div>
      <% end %>
      <% unless current_user_is_teacher? && is_current_user_profile? %>
        <div class="span8">
          <b>Achievements:</b>
          <ul>
              <%= render :partial => "achievements/achievement" %>
          </ul>

        </div>
      <% end %>
  <% end %>
</div>